(ocamllex (modules jg_highlight) )

(executable
  (name test)
  (libraries yojson jingoo)
  (modules test)
)

(alias
  (name runtest)
  (action (setenv DOC_SAMPLE_DIR "%%%ROOT_DIR%%%/doc/samples" (run ./test.exe) ) )
)

(library
  (name jg_highlight)
  (libraries jingoo)
  (modules jg_highlight)
)

(alias
  (name doc)
  (deps jg_highlight.cmxs ../src/jg_cmdline.exe)
  (action (run ../src/jg_cmdline.exe -dynlink "%%%ROOT_DIR%%%_build/default/doc/jg_highlight.cmxs" -template_dirs "%%%ROOT_DIR%%%doc/samples" -i "%%%ROOT_DIR%%%doc/index.jingoo" -o "%%%ROOT_DIR%%%doc/index.html"

) )
)
